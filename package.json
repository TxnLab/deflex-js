{
  "name": "@txnlab/deflex-monorepo",
  "private": true,
  "description": "Monorepo for Deflex SDK and examples",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TxnLab/deflex-js.git"
  },
  "license": "MIT",
  "author": "Doug Richar <doug@txnlab.dev> (https://txnlab.dev)",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm --filter @txnlab/deflex run build",
    "test": "pnpm --filter @txnlab/deflex run test",
    "test:watch": "pnpm --filter @txnlab/deflex run test:watch",
    "test:coverage": "pnpm --filter @txnlab/deflex run test:coverage",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "pnpm --filter @txnlab/deflex run typecheck",
    "ci": "pnpm run build && pnpm run lint && pnpm run format && pnpm run test",
    "release": "pnpm --filter @txnlab/deflex run release"
  },
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "@types/node": "24.9.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import-x": "4.16.1",
    "np": "10.2.0",
    "prettier": "3.6.2",
    "publint": "0.3.15",
    "tsdown": "0.15.9",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}

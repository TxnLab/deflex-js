{
  "name": "@txnlab/deflex-monorepo",
  "private": true,
  "description": "Monorepo for Deflex SDK and examples",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TxnLab/deflex-js.git"
  },
  "license": "MIT",
  "author": "Doug Richar <doug@txnlab.dev> (https://txnlab.dev)",
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm --filter @txnlab/deflex run build",
    "test": "pnpm --filter @txnlab/deflex run test",
    "test:watch": "pnpm --filter @txnlab/deflex run test:watch",
    "test:coverage": "pnpm --filter @txnlab/deflex run test:coverage",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "pnpm --filter @txnlab/deflex run typecheck",
    "ci": "pnpm run build && pnpm run lint && pnpm run format && pnpm run typecheck && pnpm run test",
    "release": "pnpm run ci && semantic-release"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import-x": "4.16.1",
    "prettier": "3.7.4",
    "semantic-release": "25.0.2",
    "typescript-eslint": "8.52.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
